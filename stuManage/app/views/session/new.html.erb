<div class="container">
  <%= @user_role %>

  <div class="row">
    <h1 class="title">Đăng nhập</h1>
  </div>

  <div class="row">
    <div class="col-lg-offset-3 col-lg-7">
      <%= form_for :session, url: login_path do |session| %>
      <div class="form-group">
        <%= session.label :user_name %>
        <%= session.text_field :user_name, placeholder: "Input user name", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= session.label :password %>
        <%= session.password_field :password, placeholder: "Input your password", class: "form-control" %>
      </div>
      <div class="text-center">
        <%= session.submit "Đăng nhập", class: "btn btn-block btn-primary" %>
      </div>
      <div class="text-right">
        <%= link_to "Đăng ký", new_user_path %>
      </div>
    </div>
    <% end %>
  </div>
</div>
