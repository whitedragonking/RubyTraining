<div class="container">

  <p>
  <div class="row">
    <div class="col-lg-12 text-center">
      <h1 class="title">Classes</h1>
    </div>
  </div>
  <label for="">List Users</label>
  <div class="col-lg-12 form-group" align="right">
    <%= link_to 'New Class',new_s_class_path, :class => "btn btn-success button-function"%>
  </div>
  <table id="table-collapse" class="table table-bordered col-lg-7 table-user">
    <thead>
    <tr>
      <!-- <th>Id</th> -->
      <th>Class name</th>
      <!-- <th>Password hash</th> -->
      <th>Teacher</th>
      <th>Year</th>
      <th>Grade</th>
      <th></th>
      <!-- <th colspan="3"></th> -->
    </tr>
    </thead>p

    <tbody>
    <% @s_classes.each do |s_class| %>
      <tr>
        <!-- <td><%= s_class.id %></td> -->
        <!-- <td><%= s_class.password_digest %></td> -->
        <td><%= s_class.class_name %></td>
        <td><%= s_class.teacher_id %></td>
        <td><%= s_class.year == 0 ? 'Student' : s_class.role == 1 ? 'Teacher' : 'Admin'%></td>
        <td><%= s_class.grade_id %></td>
        <td class="text-center">
          <%= link_to 'Show', s_class, :class => 'btn btn-sm btn-info button-function button-width'%>
          <%= link_to 'Edit', edit_s_class_path(s_class), :class => 'btn btn-sm btn-warning button-function button-width' %>
          <%= link_to 'Destroy', s_class, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-sm btn-danger button-function button-width' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
