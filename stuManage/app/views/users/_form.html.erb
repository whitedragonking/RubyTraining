<%= form_with(model: user, local: true) do |form| %>
<% if user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

  <ul>
    <% user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<form class="form-horizontal">
  <div class="col-lg-offset-3 col-lg-7">
    <div class="form-group">
      <%= form.label :user_name, class: "control-label" %>
      <%= form.text_field :user_name, id: :user_user_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password, class: "col-lg-7 control-label" %>
      <%= form.password_field :password, id: :user_password, class: "col-lg-7 form-control"  %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, class: "col-lg-7 control-label" %>
      <%= form.password_field :password_confirmation, id: :user_password_confirmation, class: "col-lg-7 form-control"  %>
    </div>

    <div class="form-group">
      <%= form.label :full_name, class: "col-lg-7 control-label" %>
      <%= form.text_field :full_name, id: :user_full_name, class: "col-lg-7 form-control"  %>
    </div>

    <div class="form-group">
      <%= form.label :role, class: "col-lg-7 control-label" %>
      <%= form.text_field :role, id: :user_role, class: "col-lg-7 form-control"  %>
    </div>

    <div class="form-group">
      <%= form.label :class_id, class: "col-lg-7 control-label" %>
      <%= form.text_field :class_id, id: :user_class_id, class: "col-lg-7 form-control"  %>
    </div>
  </div>

  <div class="col-lg-offset-3 col-lg-3">
    <div class="text-center">
      <%= form.submit "Đăng ký", :class => 'col-lg-2 btn btn-primary btn-block button'%>
    </div>
  </div>
</form>
<% end %>
