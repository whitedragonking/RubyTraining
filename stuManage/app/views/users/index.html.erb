<p id="notice"><%= notice %></p>


<h1 align="center">Users</h1>
<div class="contextual" align="right">
  <%= link_to(new_user_path, class: "btn btn-success") do %>
    New User <i class="icon-plus icon-white"></i>
  <% end %>
</div>
<p>
<table class="table table-bordered">
  <thead>
    <tr>
      <!-- <th>Id</th> -->
      <th>User name</th>
      <th>Password hash</th>
      <th>Full name</th>
      <th>Type</th>
      <th>Class</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr >
        <!-- <td><%= user.id %></td> -->
        <td><%= user.user_name %></td>
        <td><%= user.password_digest %></td>
        <td><%= user.full_name %></td>
        <td><%= user.role %></td>
        <td><%= user.class_id %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

