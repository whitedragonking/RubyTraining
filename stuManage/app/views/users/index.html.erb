<p id="notice"><%= notice %></p>
<div class="container">

<p>
  <div class="row">
    <div class="col-lg-12 text-center">
      <h1 class="title">LOGIN APP</h1>
    </div>
    <div class="col-lg-12 form-group">
      <label for="">Welcome</label>
      <%= link_to current_user.full_name, user_path(current_user) %>
    </div>
  </div>
<label for="">List Users</label>
<div class="col-lg-12 form-group" align="right">
  <%= link_to 'New User',new_user_path, :class => "btn btn-success button-function"%>
</div>
<table id="table-collapse" class="table table-bordered col-lg-7 table-user">
  <thead>
    <tr>
      <!-- <th>Id</th> -->
      <th>User name</th>
      <!-- <th>Password hash</th> -->
      <th>Full name</th>
      <th>Type</th>
      <th>Class</th>
      <th></th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <!-- <td><%= user.id %></td> -->
        <!-- <td><%= user.password_digest %></td> -->
        <td><%= user.user_name %></td>
        <td><%= user.full_name %></td>
        <td><%= user.role == 0 ? 'Student' : user.role == 1 ? 'Teacher' : 'Admin'%></td>
        <td><%= user.class_id %></td>
        <td class="text-center">
          <%= link_to 'Show', user, :class => 'btn btn-sm btn-info button-function button-width'%>
          <%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-sm btn-warning button-function button-width' %>
          <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-sm btn-danger button-function button-width' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
